<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Examoz!</title>
    <style>
        body {
            background-color: olive;
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <h3>Create a Question</h3>

                <form class="form" action="/questions" method="POST" id="">
                    <input type="radio" name="q_heading" id="r1" class="">
                    <textarea class="rounded mb-1" for="r1" placeholder="Question" name="q_heading" id="" cols="40"
                        rows="1" required></textarea>
                    <!-- <div class="mb-3"><button class="btn btn-success">Save Question</button></div> -->
                    <textarea class="rounded mb-1" placeholder="Choice 1" name="choice1" id="choice1" cols="40"
                        rows="1"></textarea>
                    <textarea class="rounded mb-1" placeholder="Choice 2" name="choice2" id="choice2" cols="40"
                        rows="1"></textarea>
                    <textarea class="rounded mb-1" placeholder="Choice 3" name="choice3" id="choice3" cols="40"
                        rows="1"></textarea>
                    <textarea class="rounded mb-1" placeholder="Choice 4" name="choice4" id="choice4" cols="40"
                        rows="1"></textarea>
                    <div class="mb-3"><button class="btn btn-success">Save Question</button>
                </form>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
